    </noscript>
    <%- include(`${partials}/nav`); -%>
    <!--   !! MAIN -------------------------->
    <main class="mb-4 mt-5">
      <div class="container px-4 px-lg-5">
        <div class="row gx-5 align-items-center justify-content-center">
          <div class="col-lg-6" style="position: relative">

            <form autocomplete="off"
              class="row mb-3 justify-content-end align-items-center"
              id="findWeatherForm"
            >
              <div class="row mb-3">
                <div class="col text-start">
                  <label class="col-sm-2 col-form-label fs-5 text-start"
                    >Address</label
                  >
                </div>
                <div class="col-sm-9">

                  <div class="input-group mb-3">
                    <div class="input-group-prepend ">
                      <button id="searchButton" type="button" class="btn btn-outline-primary  text-info border border-end-0 ps-3 pe-1  disabled"><i class="fa fa-search"></i></button>
                    </div>
                  <input type="search" id="searchInput" class="form-control border border-start-0 target-address" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                </div>

              </div>

              <div class="row mb-3 justify-content-end">
                <div
                  class="col-sm-8 position-relative text-end"
                  style="z-index: 0 !important"
                >
                  <button
                    class="btn btn-primary"
                    id="findWeather"
                    type="submit"
                  >
                    Find Weather
                  </button>
                </div>
              </div>

</form>



              <form
                class="row g-3 mb-3 justify-content-between align-items-center"
                id="latlonForm"
              >

                <div>
                  <div
                    class="row justify-content-between align-items-center mb-3"
                  >
                    <label class="col-sm-2 col-form-label" for="latInputField"
                      >Latitude</label
                    >
                    <div class="col-sm-9">
                      <input
                        class="form-control py-2"
                        id="latInputField"
                        type="number"
                        step="any"
                        aria-describedby="latInputFeedback"
                        required=""

                      />
                    </div>
                  </div>
                </div>
                <div>
                  <div
                    class="row justify-content-between align-items-center mb-3"
                  >
                    <label class="col-sm-2 col-form-label" for="lonInputField"
                      >Longitude</label
                    >
                    <div class="col-sm-9">
                      <input
                        class="form-control"
                        id="lonInputField"
                        type="number"
                        step="any"
                        aria-describedby="lonInputFieldFeedback"
                        required=""
                      />
                    </div>
                  </div>
                </div>
                <div class="col-12 text-end">
                  <button
                    class="btn btn-primary"
                    id="latlonGeocoderBtn"
                    type="submit"
                  >
                    Find Weather
                  </button>
                </div>
              </form>
              <div class="row mb-3">
                <div
                  id="liveAlertPlaceholder"
                  class="weather-alert-placeholder"
                >

              <div class="alerts mt-1">



              </div>
              </div>
              </div>


            </form>
            <hr class="mb-4" />
            <div class="row mb-3">
              <div id="liveAlertPlaceholder"></div>
            </div>
            <ul class="list-group" id="addressHistory"></ul>
          </div>
          <div class="col-lg-6 align-self-start">
            <div class="row-mb-3 align-items-start">
              <div class="col">
                <h4 class="travel-time"></h4>
                <div class="map-container">
                  <div id="map"></div>

                  <div id="info" class="info"></div>

                </div>
                <div class="col mt-3">   <div class="alert alert-warning d-flex align-items-center invisible" role="alert">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                  <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                  </svg>
                  <div>
                  No Address Found
                  </div>

                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>

       <%- include(`${partials}/comment-section.ejs`); -%>
      </div>
    </main>
    <%- include(`${partials}/footer`); -%> <%- include(`${partials}/page-scripts/weather-scripts`); -%>
  </body>
</html>
