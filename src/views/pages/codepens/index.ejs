    </div>

    <div class="map-container w-100">
      <div id="map"></div>
      <div id="static"></div>
    </div>
    <div class="row">
      <div id="liveAlertPlaceholder">
        <div class="alerts mt-2 alert-warning"></div>
        <div class="history"></div>
      </div>
      <div class="col-md-12 px-4 my-2">

        <input type="text" class="form-control" id="DistanceInput" step="any" placeholder="Output">


      </div>
    </div>
