    <noscript>
      <h3>Please enable JavaScript in order to view this site properly.</h3>
    </noscript>
    <%- include(`${partials}/nav`); -%>
      <main class="flex-shrink-0 mt-5">
        <div class="container px-3">
          <div class="row g-3 ">
            <div class="col-md-4">
              <%- include(`${partials}/general/header`, {title: 'Latitude and Longitude Distance' ,
                subtitle: 'Quickly find the distance between two points.' }); -%>


                <form  id="latlonForm">
   <div class="row-g-3">
                  <div class="col-12 my-3">
                    <label for="LatitudeInput" class="form-label">Origin</label>
                    <input type="number" class="form-control" id="LatitudeInput" step="any" placeholder="Latitude">
                  </div>
                  <div class="col-12 my-3">
          
                    <input type="number" class="form-control" id="LongitudeInput" step="any" placeholder="Longitude">
                  </div>
                </div>

   <div class="row-g-3">
                  <div class="col-12 my-3">
                    <label for="LatitudeInput" class="form-label">Destination</label>
                    <input type="number" class="form-control" id="LatitudeInput" step="any" placeholder="Latitude">
                  </div>
                  <div class="col-12 my-3">
          
                    <input type="number" class="form-control" id="LongitudeInput" step="any" placeholder="Longitude">
                  </div>
                </div>
                <div class="col-12 text-start"> <button class="btn btn-primary" id="latlonGeocoderBtn" type="submit"> Get Distance </button> </div>
                </form>
             <div class="row g-3 mb-3 mt-3 justify-content-between align-items-center"> <div class="col"> <input class="form-control" id="distanceInput" placeholder=""> </div> </div>
            </div>
            <%- include(`${partials}/map/map-Container.ejs`); -%>
          </div>
          <%- include(`${partials}/comment-section.ejs`); -%>
        </div>
      </main>
   
      <!-- Footer-->
      <%- include(`${partials}/footer`); -%>
        <%- include(`${partials}/page-scripts/lat-lon-distance-scripts.ejs`); -%>
  </body>
</html>