<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include(`${partials}/head`, {pageTitle: 'Home'}); -%> <%-
  include(`${partials}/page-scripts/geocoder-css.ejs`); -%>
  <body class="latlon-to-distance">
    <!--[if lt IE 8]>
      <p class="browserupgrade">
        You are using an <strong>outdated</strong> browser. Please
        <a href="http://browsehappy.com/">upgrade your browser</a> to improve
        your experience.
      </p>
      <p>Go back <a href="<%= PP %>/">Home</a>.</p>
    <![endif]-->

    <noscript>
      <h3>Please enable JavaScript in order to view this site properly.</h3>
    </noscript>
    <%- include(`${partials}/nav`); -%>
    <!-- Main Content-->
    <!-- Main Content-->
    <main class="mb-4 mt-5">
      <div class="container px-4 px-lg-5">
        <div class="row gx-5 align-items-center justify-content-center">
          <div class="col-lg-6" style="position: relative;">
            <form
              class="row g-3 mb-3 justify-content-between align-items-center"
              id="getDistanceForm"
            >
              <div>
                <div class="row justify-content-between align-items-center">
                  <label
                    class="col-sm-2 col-form-label"
                    for="addressInputFieldOrigin"
                    >Origin</label
                  >
                  <div class="col-sm-9">
                    <input
                      class="form-control"
                      id="addressInputFieldOrigin"
                      type="text"
                      step="any"
                      aria-describedby="latInputFeedback"
                      required
                    />
                  </div>
                </div>
              </div>
              <div>
                <div class="row justify-content-between align-items-center">
                  <label class="col-sm-2 col-form-label" for="lonInputField"
                    >Destination</label
                  >
                  <div class="col-sm-9">
                    <input
                      class="form-control"
                      id="lonInputField"
                      type="text"
                      step="any"
                      aria-describedby="lonInputFieldFeedback"
                      required
                    />
                  </div>
                </div>
              </div>
              <div class="col-12 text-end">
                <button
                  class="btn btn-primary"
                  id="latlonGeocoderBtn"
                  type="submit"
                >
                  Find Distance
                </button>
              </div>
            </form>

            <hr class="mb-4" />
            <div
              class="row g-3 mb-3 justify-content-between align-items-center"
            >
              <div class="col">
                <h5 class="text-start mb-4">Distance</h5>
                <input
                  type="text"
                  class="form-control"
                  id="distanceInput"
                  placeholder=""
                />
              </div>
            </div>
          </div>
          <div class="col-lg-6 align-self-start">
            <div class="row-mb-3 align-items-start">
              <div class="col">
                <h4 class="travel-time"></h4>
                <div class="map-container">
                  <div id="map"></div>
                  <div id="loader">
                    <div class="spinner-border" role="status">
                      <span class="sr-only d-none">Loading...</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
       <%- include(`${partials}/comment-section.ejs`); -%>
      </div>
    </main>
    <!-- Footer-->

    <%- include(`${partials}/footer`); -%> <%-
    include(`${partials}/page-scripts/address-distance-scripts.ejs`); -%>
  </body>
</html>
