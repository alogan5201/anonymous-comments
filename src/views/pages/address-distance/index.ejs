<![endif]-->
    <noscript>
      <h3>Please enable JavaScript in order to view this site properly.</h3>
    </noscript>
    <main>
      <div class="modal fade" tabindex="-1" role="dialog" id="bookmarkListModal">
        <div class="modal-dialog
            modal-fullscreen" aria-hidden="true">
          <div class="modal-content
              rounded-6 shadow">
            <div class="modal-body pb-0">
              <div class="row
                  justify-content-end mb-2"> <button type="button" class="btn-close
                    ms-auto me-2 mb-2" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="table-responsive">
                <table class="table table-dark table-hover" id="bookmarkTable">
                  <thead>
                    <tr>

                      <th scope="col">Name</th>
                      <th scope="col">Latitude</th>
                      <th scope="col">Longitude</th>
                      <th scope="col">Address</th>
                      <th scope="col">DMS</th>
                    </tr>
                  </thead>
                  <tbody id="tableBody">



                  </tbody>
                </table>
              </div>

            </div>
            <div class="modal-footer
                flex-column border-top-0 pt-0"> <button type="button" class="btn
                  btn-sm btn-light w-100 mx-0" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <div class="modal fade py-5" tabindex="-1" role="dialog" id="bookmarkModal">
        <div class="modal-dialog" aria-hidden="true">
          <div class="modal-content rounded-6 shadow">
            <div class="modal-body
                pb-0">
              <div class="row justify-content-end mb-2"> <button type="button" class="btn-close ms-auto me-2 mb-2"
                  data-bs-dismiss="modal" aria-label="Close"></button> </div>
              <form id="bookmarkForm" autocomplete="off"> <input class="form-control" id="bookmark-name"
                  placeholder="Enter Bookmark name" required=""> <button type="submit" class="btn btn-sm btn-primary
                    w-100 mx-0 mb-2 mt-4">Save changes</button> </form>
            </div>
            <div class="modal-footer flex-column border-top-0 pt-0"> <button type="button"
                class="btn btn-sm btn-light w-100 mx-0" data-bs-dismiss="modal">Close</button> </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card" style="background-color:  #111827 !important">
            <div class="card-body px-0">
              <div class="row" style="
      justify-content: space-between;
  ">

                <div class="col-md-12">
                  <form id="getDistanceForm" autocomplete="off">
                    <div class="input-group" style="
      justify-content: end;
  ">
                      <button id="bookmarkListButton" type="button" class="btn btn-secondary me-auto"
                        style="opacity: 1;"><i class="fas fa-bookmark"></i>
                      </button>
                      <input class="form-control form-control-sm rounded-end me-2" id="OriginInput" step="any"
                        placeholder="Origin" style="
      /* margin-right: 2rem; */
      max-width: 200px;
  "> <input class="form-control rounded-end rounded-start me-2" id="DestinationInput" step="any"
                        aria-describedby="button-addon2" placeholder="Destination" style="
      max-width: 200px;
      /* margin-right: 2rem; */
  ">
                      <button class="btn btn-primary rounded-start" id="button-addon2" type="submit">
                        Find Distance </button>

                    </div>
                  </form>
                </div>


              </div>
            </div>
          </div>
          <div class="row g-3">
            <div class="col-lg-12
                align-self-start mt-0 " id="mapColumn">
              <h4 class="mb-3" travel-time=""></h4>
              <div class="map-container">
                <div id="myLegend" style="opacity:.9!important">
                  <ul class="list-group bg-light
                      w-100 invisible fs-6 legend-list" style="opacity: 0;">
                    <li id="distance" class="list-group-item ps-1">Distance: <span class="result-text">50m</span></li>
                    <li id="travelTime" class="list-group-item ps-1">Travel Time: <span class="result-text"></span>
                    </li>
                    <li id="originWeather" class="list-group-item ps-1">Origin Weather: <span
                        class="result-text"></span>
                    </li>
                    <li id="destinationWeather" class="list-group-item ps-1">Destination weather: <span
                        class="result-text"></span><span class="result-icon"></span></li>
                  </ul>
                </div>
                <div id="map"></div>
                <div id="static"></div>
              </div>
              <div class="row">
                <div id="liveAlertPlaceholder">
                  <div class="alerts
                      mt-2 alert-warning"></div>
                  <div class="history"></div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </main>

    <!-- Footer-->
    <%- include(`${partials}/page-scripts/address-distance-scripts.ejs`); -%>
  </body>

</html>