  <div class="modal-dialog" aria-hidden="true">
    <div class="modal-content rounded-6 shadow">
    
          <div class="modal-body">
            <div class="row justify-content-end">
  <button type="button" class="btn-close ms-auto me-2 mb-2" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
        <form id="bookmarkForm">
          <div class="mb-3">
        
            <input type="text" class="form-control" id="bookmark-name" placeholder="Enter Bookmark name" required>
          </div>
         
      
      </div>
      <div class="modal-footer flex-column border-top-0">
        <button type="button" class="btn btn-sm btn-primary w-100 mx-0 mb-2" >Save changes</button>
        <button type="button" class="btn btn-sm btn-light w-100 mx-0" data-bs-dismiss="modal">Close</button>
      </div>
        </form>
    </div>
  </div>
</div>
